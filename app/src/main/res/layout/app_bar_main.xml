<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.terna.e_plant.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0a9ba6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Status"
            android:gravity="center"
            android:textSize="32sp"
            android:shadowColor="@color/cardview_dark_background"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width= "match_parent"
        android:layout_height="match_parent"
        tools:context="org.terna.e_plant.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_height="match_parent"
            android:background="#00e5ff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:text="Current Plant Status"
                        android:textSize="25dp"
                        android:background="#c1f6f9"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60">

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="#FFFFFF"
                            android:text="Excellent"
                            android:gravity="center"
                            android:textSize="30sp"
                            android:id="@id/textViewPlant"/>

                    </RelativeLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:text="Humidity Status"
                        android:textSize="25dp"
                        android:background="#c1f6f9"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="#FFFFFF"
                        android:text="56%"
                        android:gravity="center"
                        android:textSize="30sp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:text="Moisture Status"
                        android:textSize="25dp"
                        android:background="#c1f6f9"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="#FFFFFF"
                        android:text="60%"
                        android:gravity="center"
                        android:textSize="30sp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:text="Temperature"
                        android:textSize="25dp"
                        android:background="#c1f6f9"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="#FFFFFF"
                        android:text="25 c"
                        android:gravity="center"
                        android:textSize="30sp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>




    </android.support.design.widget.CoordinatorLayout>
