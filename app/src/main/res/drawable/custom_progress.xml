<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <!-- SeekBar Background -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:endColor="#dcf6f9"
                android:startColor="#98d6d6" />
        </shape>
    </item>

    <!-- SeekBar Secondary Progress -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:endColor="#00a7af"
                    android:startColor="#2ff3ff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:endColor="#00a7af"
                    android:startColor="#2ff3ff" />
            </shape>
        </clip>
    </item>

</layer-list>